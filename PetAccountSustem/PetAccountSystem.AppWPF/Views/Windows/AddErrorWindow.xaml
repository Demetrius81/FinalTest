<Window x:Class="PetAccountSystem.AppWPF.Views.Windows.AddErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetAccountSystem.AppWPF.Views.Windows"
        xmlns:vm="clr-namespace:PetAccountSystem.AppWPF.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:AddErrorWindowViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding Title}" Height="200" Width="300" ResizeMode="NoResize" WindowStyle="None">
    <StackPanel>
        <TextBlock Text="Ошибка!" FontSize="20" HorizontalAlignment="Center" Margin="2, 20, 2, 2"/>
        <TextBlock Text="В окно ввода неоходимо ввести число" FontSize="15" HorizontalAlignment="Center" Margin="2, 15, 2, 2"/>
        <TextBlock Text="больше нуля" FontSize="15" HorizontalAlignment="Center" Margin="2, 2, 2, 2"/>
        <Button Content="Ошибку осознаю. Назад" Margin="2, 40, 2, 2" HorizontalAlignment="Center" Command="{Binding AddWindowCallCommand}"/>
    </StackPanel>
</Window>
